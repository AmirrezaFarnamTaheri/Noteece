{
  "expo": {
    "name": "Noteece",
    "slug": "noteece-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0E27"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.noteece.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Noteece uses your camera to capture and OCR images for quick notes.",
        "NSLocationWhenInUseUsageDescription": "Noteece uses your location for location-based task reminders.",
        "NFCReaderUsageDescription": "Noteece uses NFC to trigger quick actions via NFC tags.",
        "NSSpeechRecognitionUsageDescription": "Noteece uses speech recognition for voice capture.",
        "NSMicrophoneUsageDescription": "Noteece uses your microphone for voice notes.",
        "NSFaceIDUsageDescription": "Noteece uses Face ID to unlock your encrypted vault securely."
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "backgroundColor": "#0A0E27",
      "backgroundModes": ["fetch", "processing"]
    },
    "android": {
      "package": "com.noteece.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "NFC",
        "VIBRATE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0E27"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-notifications",
      "expo-task-manager",
      "expo-camera",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.0"
          },
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          }
        }
      ]
    ],
    "scheme": "noteece",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "sentryDsn": "",
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "hooks": {
      "postPublish": []
    }
  }
}
