{
  "name": "@noteece/mobile",
  "version": "1.0.0",
  "description": "Noteece Mobile - Your Life OS on the go",
  "main": "expo-router",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "build:development": "eas build --profile development --platform all",
    "build:preview": "eas build --profile preview --platform all",
    "build:production": "eas build --profile production --platform all",
    "build:ios": "eas build --profile production --platform ios",
    "build:android": "eas build --profile production --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android"
  },
  "dependencies": {
    "@noble/ciphers": "^1.0.0",
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-navigation/native": "^6.1.9",
    "@sentry/react-native": "^7.5.0",
    "date-fns": "^3.0.0",
    "expo": "~50.0.0",
    "expo-av": "^16.0.7",
    "expo-background-fetch": "~11.6.0",
    "expo-crypto": "~12.8.0",
    "expo-file-system": "~16.0.0",
    "expo-haptics": "~12.8.0",
    "expo-linear-gradient": "^15.0.7",
    "expo-local-authentication": "^17.0.7",
    "expo-notifications": "~0.27.0",
    "expo-router": "~3.4.0",
    "expo-secure-store": "^15.0.7",
    "expo-sharing": "~11.7.0",
    "expo-sqlite": "~13.1.0",
    "expo-status-bar": "~1.11.1",
    "expo-task-manager": "~11.6.0",
    "nanoid": "^5.0.4",
    "react": "18.2.0",
    "react-native": "0.73.4",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-get-random-values": "^2.0.0",
    "react-native-reanimated": "~3.6.2",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-zeroconf": "^0.14.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.11",
    "@types/react": "~18.2.45",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.56.0",
    "eslint-config-expo": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.13",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "private": true,
  "expo": {
    "install": {
      "exclude": [
        "react-native-safe-area-context"
      ]
    }
  }
}
