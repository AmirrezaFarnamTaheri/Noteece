{
  "name": "noteece",
  "version": "1.1.0",
  "description": "A local-first, end-to-end encrypted workspace designed for speed-of-thought productivity",
  "author": {
    "name": "Amirreza \"Farnam\" Taheri",
    "email": "taherifarnam@gmail.com"
  },
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test:coverage": "turbo test:coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "pnpm": {
    "overrides": {
      "react-test-renderer": "18.2.0",
      "react": "18.2.0",
      "react-dom": "18.2.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md}": [
      "prettier --write"
    ],
    "apps/desktop/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/core-rs/**/*.rs": [
      "cargo fmt"
    ]
  }
}
